<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rainbowToast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rainbowCard"
        android:layout_width="@dimen/ht_card_width_300"
        android:layout_height="@dimen/ht_card_height_160"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ht_message_layout_margin_left_55"
            android:layout_marginTop="@dimen/ht_message_layout_margin_top_50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rainbowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="@integer/ht_title_message_line_1"
                android:maxLength="@integer/ht_title_message_length"
                android:text="@string/success_lite"
                android:paddingStart="@dimen/ht_title_message_padding_left_10"
                android:layout_marginEnd="@dimen/ht_message_layout_margin_left_55"
                android:textColor="@color/ht_default_title_text_color_lite"
                android:textSize="@dimen/ht_title_message_size_14"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/rainbowMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rainbowTitle"
                android:layout_marginEnd="@dimen/ht_para_message_padding_right_20"
                android:maxLines="@integer/ht_para_message_line_1"
                android:maxLength="@integer/ht_para_message_length"
                android:text="@string/success_message_lite"
                android:textColor="@color/ht_para_text_color_lite"
                android:textSize="@dimen/ht_para_message_size_10" />

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>